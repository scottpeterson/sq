<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.football.assets">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.football.assets.core.App"
        android:allowBackup="true"
        android:icon="@mipmap/img"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/img"
        android:supportsRtl="true">
        <activity
            android:name="com.football.assets.presentationLayer.ui.screen.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ComposeAndroidFootballAssetsTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>